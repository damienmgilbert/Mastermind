<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Mastermind.Views.PopoverView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Mastermind.Views"
    x:DataType="views:PopoverView"
    IsVisible="{Binding IsVisible, Mode=OneWay}">
    <Frame
        Padding="10"
        BackgroundColor="White"
        BorderColor="Black"
        CornerRadius="8"
        HasShadow="True">
        <ContentView.Content>
            <Label Text="content" />
        </ContentView.Content>
    </Frame>
</ContentView>
